<section
  id="testimonials"
  class="bg-gradient-to-b from-[#039DE8] to-[#0288d1] py-12 md:py-16 lg:py-20"
>
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">

---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
import "aos/dist/aos.css";

// Mejores constantes para SEO
const siteName = "Dr. Guillermo Terrado";
const description =
  "Dr. Guillermo Terrado - Médico especialista en Medicina Reproductiva con más de 30 años de experiencia ayudando a parejas a cumplir su sueño de ser padres. Consulta en Alicante, España.";
const canonicalURL = new URL(
  Astro.url.pathname,
  "https://www.drguillermoterrado.com"
).toString();
const socialImageURL = new URL(
  "/img/portraitDr.png",
  "https://www.drguillermoterrado.com"
).toString();
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Metadatos básicos -->
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
    />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />

    <!-- SEO tags -->
    <meta name="robots" content="index, follow, max-image-preview:large" />
    <meta name="author" content="Dr. Guillermo Terrado" />
    <meta
      name="keywords"
      content="medicina reproductiva, fertilidad, reproducción asistida, ginecología, tratamientos de fertilidad, Alicante, España, Dr. Terrado, Guillermo Terrado, embarazo, Denia, Beniarbeig, Benidorm"
    />
    <meta name="publisher" content="Joaquin Terrado Mora" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta
      property="og:image:alt"
      content="Dr. Guillermo Terrado - Especialista en Medicina Reproductiva"
    />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@drterrado" />
    <meta name="twitter:creator" content="@drterrado" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={`${title}`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta
      name="twitter:image:alt"
      content="Dr. Guillermo Terrado - Especialista en Medicina Reproductiva"
    />

    <!-- Open Graph / LinkedIn -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta
      property="og:image:alt"
      content="Dr. Guillermo Terrado - Especialista en Medicina Reproductiva"
    />
    <meta property="og:locale" content="es_ES" />

    <!-- Favicon y Apple Touch Icons -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="icon" type="image/png" href="/favicon.png" sizes="192x192" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.svg" />

    <!-- Título -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>{`${title}`}</title>
  </head>
  <body class="bg-transparent w-full">
    <slot />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 1000,
        once: true,
      });

      if (history.scrollRestoration) {
        history.scrollRestoration = "manual";
      }

      window.onload = function () {
        this.document.documentElement.style.scrollBehavior = "auto";
        window.scrollTo(0, 0);
        this.document.documentElement.style.scrollBehavior = "smooth";
      };
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  .scroll-smooth {
    scroll-behavior: smooth;
  }
</style>
